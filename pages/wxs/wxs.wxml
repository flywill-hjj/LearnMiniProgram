<!-- 1wxs的定义方式 -->
<wxs module="info">
  //JS代码
  var message = 'Hello World'
  var name = 'flywill';

  var sum = function (num1, num2) {
    return num1 + num2
  }

  //commonjs的模块化导出的写法
  module.exports = {
    message: message,
    name: name,
    sum: sum
  }
</wxs>

<view>{{ info.message }}</view>
<view>{{ info.name }}</view>
<view>{{ info.sum(20,30) }}</view>

